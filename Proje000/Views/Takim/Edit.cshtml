@model Takim

<h2>Personel Düzenleme</h2>
<hr>

<form asp-controller="Takim" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" >
    <div class="mb-3">
        <label asp-for="Id" class="form-label">Personel Id</label>
        <input asp-for="Id" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="TakimAdi" class="form-label">Takım Adı</label>
        <input asp-for="TakimAdi" class="form-control">
    </div>
    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form> 